<%- include('./partials/head') %>

<main>

    <h1 class="fav-h1">Bewaarde huizen</h1>
    <form>
        <p>Filter op:</p>
        <select>
            <option>Prijs</option>
            <option>Bewaardatum</option>
            <option>Datum</option>
            <option>Plaats</option>
        </select>
    </form>

<section class="house-template">    
    <% data.forEach(house => { %>
        <article class="grid-container">

            <div class="image">
                <p><img class="house-image" src="https://fdnd-agency.directus.app/assets/<%= house.poster_image %>" alt="image house"></p> 
            </div>

            <div class="content">
                <h2 class="h2-link"><a href="/detail/<%= house.id %>" class="house-link"><%= house.street %> <%= house.house_nr %> <%= house.nr_addition %></a></h2>
                <p><%= house.postal_code %>, <%= house.city %></p> 
                <p class="price"> â‚¬<%= house.price %></p> 
                <p><%= house.agent %></p> 
                <ul class="content-ul">
                    <li>Aantal kamers: <%= house.rooms %></li>
                    <li><%= house.m2 %> m2</li>
                    <li><%= house.m2_garden %> tuin m2</li>
                </ul>
                <br>
            </div>

            <div class="ster">
                <div class="rate">
                    <!-- <p>Mijn beoordeling</p> -->
                    <!-- <p><a href="/beoordeling" class="beoordeling-text">Notitie maken +</a></p> -->
                    <p><button popovertarget="mydiv">Notitie maken +</button></p>
                    <input type="radio" id="star5" name="rate" value="5" />
                    <label for="star5" title="text">5 stars</label>
                    <input type="radio" id="star4" name="rate" value="4" />
                    <label for="star4" title="text">4 stars</label>
                    <input type="radio" id="star3" name="rate" value="3" />
                    <label for="star3" title="text">3 stars</label>
                    <input type="radio" id="star2" name="rate" value="2" />
                    <label for="star2" title="text">2 stars</label>
                    <input type="radio" id="star1" name="rate" value="1" />
                    <label for="star1" title="text">1 star</label>
                </div>
            </div>

            <div class="verwijderen">
                <button>Verwijderen  &#x2715;</button>
            </div>

            <div class="beoordelingen">
                <p>Beoordelingen van: </p>
                <br>

                <%- include('./partials/ster-rating-persoon') %>
                
                <%- include('./partials/ster-rating-persoon') %>

                <%- include('./partials/ster-rating-persoon') %>

                <%- include('./partials/ster-rating-persoon') %>

            </div>

        </article>

        <div popover id="mydiv">
          <div class="popover-div">
               <h2>Notities:</h2>
            <br>
            <p>Algemene score: </p> <%- include('./partials/ster-notitie') %>
            <hr>
            <ul>
                <li>Keuken </li><%- include('./partials/ster-notitie') %>
                <li>Tuin </li><%- include('./partials/ster-notitie') %>
                <li>Ligging </li><%- include('./partials/ster-notitie') %>
                <br>
                <li>Badkamer </li><%- include('./partials/ster-notitie') %>
                <li>Prijs </li><%- include('./partials/ster-notitie') %>
                <li>Oppervlakte </li><%- include('./partials/ster-notitie') %>
            </ul>
           
            <button popovertarget="mydiv" popovertargetaction="hide" class="close-button">Close</button>
          </div>  
        </div>
           

   <% }); %>
</section>
</main>